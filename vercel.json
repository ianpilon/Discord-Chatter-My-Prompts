{
  "version": 2,
  "builds": [
    { "src": "client/**", "use": "@vercel/static" },
    { "src": "server/api/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/api/$1.ts" },
    { "src": "/(.*)", "dest": "/client/$1" }
  ],
  "crons": [
    {
      "path": "/api/cron/auto-analysis",
      "schedule": "* * * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
